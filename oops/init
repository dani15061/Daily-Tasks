class Person:
    def __init__(self, name, age):
        self.name =  name
        self.age =  age
    def display (self): 
        print('I am ' ,self.name)
    def greet (self):
        if self.age < 80:
            print ("Hello, how are you doing?")
        else:
            print('Hello, how do you do')
        self.display()
pl = Person('Dani' , 20) 
p2 =  Person('Dharani',22)

pl.greet ()
p2.greet ()
